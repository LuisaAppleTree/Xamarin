<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestauranteApp.Presentacion.Login">
    <Grid x:Name="gridVistas" BackgroundColor="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="lbltitulo" Grid.Row="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="White"
               FontAttributes="Bold"
               FontSize="20"
               Text="¿Quién está iniciando sesión?" />
        <ScrollView Grid.Row="1"
                    Orientation="Vertical">
            <FlexLayout x:Name="PanelUsuarios"
                        Grid.Row="1"
                        Wrap="Wrap"
                        JustifyContent="SpaceAround"></FlexLayout>
        </ScrollView>
    </Grid>
</ContentPage>